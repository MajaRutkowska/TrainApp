@page
@using TrainApp.Areas.Admin.Pages
@model ManageTeamModel

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>

<body class="ur-body">
    <div class="header-container d-flex align-items-center">
        <a href="/Admin/Teams">
            <i class="fa fa-arrow-left back-icon" aria-hidden="true"></i>
        </a>
        <h2 class="title text-center flex-grow-1">Zarządzaj drużyną</h2>
    </div>
    <div class="card mb-3" style="border: 3px solid #ffca2c">
        <div class="card-header" style="font-weight: 600; justify-content: center; display: flex; border-bottom: 2px solid #ffca2c; background-color: #ffca2c">
            @Model.Team.TeamName
        </div>
        <div class="card-body">
            <p><strong>Adres:</strong> @Model.Team.Address</p>
            <p><strong>Rok powstania:</strong> @Model.Team.CreationYear</p>
        </div>
    </div>

    <h3 class="subtitle">Trenerzy</h3>
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Data urodzenia</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coach in Model.Coaches)
                {
                    <tr>
                        <td>@coach.Name</td>
                        <td>@coach.Surname</td>
                        <td>@coach.BirthDate.ToString("yyyy-MM-dd")</td>
                        <td class="remove-column">
                                <a href="/Admin/RemoveCoach?coachId=@coach.Id&teamId=@Model.Team.TeamId" class="btn btn-danger" title="Usuń trenera">
                                <i class="fas fa-trash"></i>
                                    </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="/Admin/EditTeam?teamid=@Model.Team.TeamId" class="buttonR btn-warning">Edytuj dane</a>
        <a href="/Admin/AssignCoach?teamid=@Model.Team.TeamId" class="buttonR btn-success">Dodaj trenera</a>
    </div>
</body>