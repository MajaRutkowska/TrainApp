@page
@using TrainApp.Areas.Admin.Pages
@model SendEmailModel

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>

<body class="ur-body">
    <div class="header-container d-flex align-items-center">
        <a href="/Index">
            <i class="fa fa-arrow-left back-icon" aria-hidden="true"></i>
        </a>
        <h2 class="title text-center flex-grow-1">Wyślij wiadomość e-mail</h2>
    </div>
    <div style="min-width: 70rem;">
    <form method="post" style="max-width: 65rem; margin: 0 auto;">
        <div class="form-group d-flex align-items-center" style="margin-bottom: 15px;">
            <label for="recipients" style="flex: 0 0 150px; margin-right: 10px;">Wybierz odbiorców:</label>
            <select id="recipients" name="SelectedTrainers" class="form-control" multiple size="10" style="flex: 1;">
                    @foreach (var trainer in Model.Trainers)
                    {
                        <option value="@trainer.Email">@trainer.Name (@trainer.Email)</option>
                    }
            </select>
        </div>
        <small style="display: block; text-align: right; margin-bottom: 15px; color: white;">
            Przytrzymaj <kbd>Ctrl</kbd> (lub <kbd>Cmd</kbd> na Macu), aby wybrać wielu odbiorców.
        </small>

        <div class="form-group d-flex align-items-center" style="margin-bottom: 15px;">
            <label for="subject" style="flex: 0 0 150px; margin-right: 10px;">Temat:</label>
            <input type="text" id="subject" name="Subject" class="form-control" required style="flex: 1;" />
        </div>

        <div class="form-group d-flex align-items-start" style="margin-bottom: 15px;">
            <label for="message" style="flex: 0 0 150px; margin-right: 10px;">Treść wiadomości:</label>
            <textarea id="message" name="Message" class="form-control" rows="10" required style="flex: 1;"></textarea>
        </div>

        <div style="display: flex; justify-content: center; margin-top: 10px;">
            <button type="submit" class="btn btn-warning d-flex align-items-center">
                <i class="fa fa-paper-plane" aria-hidden="true" style="margin-right: 5px;"></i>
                Wyślij e-mail
            </button>
        </div>
    </form>
    </div>
</body>
