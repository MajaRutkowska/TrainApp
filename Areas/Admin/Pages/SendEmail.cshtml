@page
@using TrainApp.Areas.Admin.Pages
@model SendEmailModel

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>

<h2>Wyślij wiadomość e-mail</h2>

<form method="post">
    <div class="form-group">
        <label for="recipients">Wybierz odbiorców:</label>
        <select id="recipients" name="SelectedTrainers" class="form-control" multiple size="10">
            @foreach (var trainer in Model.Trainers)
            {
                <option value="@trainer.Email">@trainer.Name (@trainer.Email)</option>
            }
        </select>
        <small>Przytrzymaj <kbd>Ctrl</kbd> (lub <kbd>Cmd</kbd> na Macu), aby wybrać wielu odbiorców.</small>
    </div>

    <div class="form-group">
        <label for="subject">Temat:</label>
        <input type="text" id="subject" name="Subject" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="message">Treść wiadomości:</label>
        <textarea id="message" name="Message" class="form-control" rows="10" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Wyślij e-mail</button>
</form>