@page
@using TrainApp.Areas.Coach.Pages
@model MyTeamsModel

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <meta charset="utf-8" />
</head>

<body class="ur-body">
    <div class="header-container d-flex align-items-center">
        <a href="/Index">
            <i class="fa fa-arrow-left back-icon" aria-hidden="true"></i>
        </a>
        <h2 class="title text-center flex-grow-1">Twoje drużyny</h2>
    </div>
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th style="width: 40%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model.Teams)
                {
                    <tr>
                        <td>@team.TeamName</td>
                        <td>
                            <form method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="teamId" value="@team.TeamId" />
                                <div style="display: flex; flex-direction: row; gap: 8px;">
                                    <div>

                                        <button type="submit" class="btn btn-warning">
                                            <i class="fas fa-plus" style="margin-right: 5px;"></i>
                                            Dodaj zawodnika
                                        </button>
                                    </div>
                                    <div>

                                        <a href="/Coach/TeamDetails?teamid=@team.TeamId" class="btn btn-warning">
                                            <i class="fa fa-info-circle" aria-hidden="true" style="margin-right: 5px;"></i>
                                            Zobacz szczegóły drużyny
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>



