@page
@using TrainApp.Areas.Coach.Pages
@model RemovePlayerModel

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <meta charset="utf-8" />
</head>

<body class="ur-body">

    <div class="wrapper">
        <div class="login-box" style="border-color: #ffca2c !important;">
            <div class="login-header" style="background-color: #ffca2c">
                <span style="font-weight:600;">Usuń Zawodnika</span>
            </div>
            <p style="color: white">Czy jesteś pewnien, że chcesz usunąć tego zawodnika z drużyny?</p>
            <div>
                <p style="color: white"><strong>Imię:</strong> @Model.Player.Name</p>
                <p style="color: white"><strong>Nazwisko:</strong> @Model.Player.Surname</p>
                <p style="color: white"><strong>Data urodzenia:</strong> @Model.Player.BirthDate.ToString("yyyy-MM-dd")</p>
            </div>

            <form method="post">
                <div class="input-box" style="display: flex; justify-items: center; flex-direction: column;">
                    <input type="hidden" name="Player.Id" value="@Model.Player.Id" />
                    <input type="hidden" name="Team.TeamId" value="@Model.Team.TeamId" />
                    <input type="submit" value="Usuń zawodnika" class="btn btn-danger" style="margin-bottom: 10px;" />
                    <a href="/Coach/TeamDetails?teamid=@Model.Team.TeamId" class="btn btn-warning">Powrót</a>
                </div>
            </form>
        </div>
</body>



