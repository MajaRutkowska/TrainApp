@page
@using TrainApp.Areas.Coach.Pages
@model AddTrainingModel;
@{
    ViewData["Title"] = "Add Task";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>



<body class="ur-body">
    <div class="header-container d-flex align-items-center">
        <a href="/Index" class="back-button">
            <i class="fa fa-arrow-left back-icon" aria-hidden="true"></i>
        </a>
        <h2 class="title text-center flex-grow-1">Dodaj Wydarzenie</h2>
    </div>

    <form method="post">
        <div class="form-group">
            <label for="title">Tytuł treningu:</label>
            <input type="text" name="Title" id="title" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="date">Data treningu:</label>
            <input type="datetime-local" name="Date" id="date" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="teamId">Wybierz drużynę:</label>
            <select name="TeamId" id="teamId" class="form-control" required>
                @foreach (var team in Model.Teams)
                {
                    <option value="@team.TeamId">@team.TeamName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="color">Wybierz kolor wydarzenia:</label>
            <input type="color" name="Color" id="color" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Dodaj trening</button>
    </form>


   
</body>

<style>
    input[type="radio"] {
        accent-color: #ffca2c; 
    }


    .form-group {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }


    label {
        text-align: left; 
        white-space: nowrap; 
    }

    .form-control,
    textarea {
        max-width: 100%;
        box-sizing: border-box;
    }


    .d-flex {
        display: flex;
        align-items: center;
    }

    .ms-2 {
        margin-left: 0.5rem;
    }

    .me-4 {
        margin-right: 1rem;
    }
</style>

