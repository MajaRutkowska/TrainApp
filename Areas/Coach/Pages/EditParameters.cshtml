@page
@using TrainApp.Areas.Coach.Pages
@model EditParametersModel;
@{
    ViewData["Title"] = "Assign Coach";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <meta charset="utf-8" />
</head>
<style>
    form#addTaskForm {
        display: grid;
        grid-template-columns: 150px auto; /* Label 150px szerokości, input zajmuje resztę */
        gap: 12px 16px; /* Odstępy między wierszami i kolumnami */
        align-items: center; /* Wyrównanie elementów do środka pionowo */
    }

        form#addTaskForm .form-group {
            display: contents; /* Pozwala na wyrównanie elementów bez dodatkowego kontenera */
        }

        form#addTaskForm label {
            text-align: left; /* Wyrównanie labeli do lewej */
            font-weight: bold; /* Opcjonalne: pogrubienie tekstu */
        }

        form#addTaskForm input {
            width: 100%; /* Inputy wypełniają dostępną przestrzeń */
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
</style>

<body class="ur-body">


    <div class="header-container d-flex align-items-center">
        <a href="/Coach/PlayerDetails?playerId=@Model.Player.Id">
            <i class="fa fa-arrow-left back-icon" aria-hidden="true"></i>
        </a>
        <h2 class="title text-center flex-grow-1">Edytuj parametry</h2>
    </div>

    <div style="max-width: 600px; margin: auto;">
        <form method="post" id="addTaskForm">

            @Html.AntiForgeryToken()
            <input type="hidden" name="PlayerId" value="@Model.Player.Id" />

            <div class="form-group">
                <label for="Height" title="Wzrost zawodnika w centymetrach">Wzrost:</label>
                <input type="number" id="Height" name="Height" class="form-control" value="@Model.Parameters?.Height" required />
            </div>

            <div class="form-group">
                <label for="Weight" title="Waga zawodnika w kilogramach">Waga:</label>
                <input type="number" id="Weight" name="Weight" class="form-control" value="@Model.Parameters?.Weight" required />
            </div>

            <div class="form-group">
                <label for="Speed" title="Czas biegu na 100 metrów">Szybkość:</label>
                <input type="number" id="Speed" name="Speed" class="form-control" value="@Model.Parameters?.Speed" required />
            </div>

            <div class="form-group">
                <label for="Endurance" title="Wynik BeepTest">Wytrzymałość:</label>
                <input type="number" id="Endurance" name="Endurance" class="form-control" value="@Model.Parameters?.Endurance" required />
            </div>

            <div class="form-group">
                <label for="HighJump" title="Skok dosiężny mierzony w centymetrach">Skok wzwyż:</label>
                <input type="number" step="0.01" id="HighJump" name="HighJump" class="form-control" value="@Model.Parameters?.HighJump" required />
            </div>

            <div class="form-group">
                <label for="Dribble" title="Czas pokonania toru z pachołkami">Drybling:</label>
                <input type="number" step="0.01" id="Dribble" name="Dribble" class="form-control" value="@Model.Parameters?.Dribble" required />
            </div>

            <div class="form-group">
                <label for="LegStrength" title="Liczba przysiadów wykonanych w minutę">Siła nóg:</label>
                <input type="number" id="LegStrength" name="LegStrength" class="form-control" value="@Model.Parameters?.LegStrength" required />
            </div>

            <div class="form-group">
                <label for="ShotPower" title="Szybkość piłki mierzona po strzale">Siła strzału:</label>
                <input type="number" step="0.01" id="ShotPower" name="ShotPower" class="form-control" value="@Model.Parameters?.ShotPower" required />
            </div>

            <div class="form-group">
                <label for="Flexibility" title="Skłon poniżej poziomu stóp mierzony w centymetrach">Elastyczność:</label>
                <input type="number" step="0.01" id="Flexibility" name="Flexibility" class="form-control" value="@Model.Parameters?.Flexibility" required />
            </div>

            <div style="display: flex; justify-items: center; margin: auto; grid-column: span 2;">
                <button type="submit" class="btn btn-warning">
                    @if (Model.Parameters == null)
                    {
                        <text>Dodaj parametry</text>
                    }
                    else
                    {
                        <text>Zapisz zmiany</text>
                    }
                </button>
            </div>
        </form>
    </div>

</body>

}